<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/reset_password_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="bottom" android:orientation="vertical" android:background="@drawable/paybase__action_sheet_background" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@+id/reset_password_layout" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/paybase__weak_btn_text_enabled_color" android:ellipsize="end" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="95dp" android:singleLine="true"/>
            <TextView android:textSize="14dp" android:textColor="@color/paybase__weak_btn_text_enabled_color" android:ellipsize="end" android:gravity="center" android:id="@+id/guide_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:singleLine="true"/>
        </LinearLayout>
        <Button android:textStyle="normal" android:textColor="@color/paybase__weak_btn_text_enabled_color" android:id="@+id/reset_next" android:background="@drawable/mpay__reset_password_guide_cancel_button_background" android:layout_marginLeft="20dp" android:layout_marginTop="0dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:text="下次再说" android:layout_alignParentBottom="true" style="@style/mtpaysdk_button"/>
        <Button android:id="@+id/reset_right_now" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="15dp" android:text="立即重置" android:layout_above="@+id/reset_next" style="@style/mtpaysdk_button"/>
    </RelativeLayout>
</RelativeLayout>
