<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/wm_st_dlg_container" android:background="@drawable/wm_st_shopcart_bg_drug_auth" android:layout_width="280dp" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/wm_sc_common_grant_authorize"/>
        <TextView android:scrollbarStyle="outsideOverlay" android:textSize="14sp" android:textColor="#333333" android:id="@+id/wm_st_dlg_tv_auth_content" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="10dp" android:layout_marginRight="18dp" android:layout_marginBottom="20dp" android:text="@string/wm_st_drug_auth_tip" android:maxLines="14" android:lineSpacingExtra="4sp" android:scrollbarFadeDuration="1000"/>
        <View style="@style/WmScHoriLine"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="45dp">
            <TextView android:textSize="16sp" android:textColor="#333333" android:gravity="center" android:id="@+id/wm_st_dlg_tv_cancel" android:background="@drawable/wm_st_shopcart_dlg_left_bottom_corner" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/wm_sc_common_cancel" android:layout_weight="1"/>
            <View style="@style/WmScVertLine"/>
            <TextView android:textSize="16sp" android:textColor="#ffb000" android:gravity="center" android:id="@+id/wm_st_dlg_tv_proceed" android:background="@drawable/wm_st_shopcart_dlg_right_bottom_corner" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/wm_sc_common_grant_authorize" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
