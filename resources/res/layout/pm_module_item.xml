<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#08000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="@color/pm_white" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/add" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pm_picasso_add"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <EditText android:textSize="18sp" android:id="@+id/project" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="projectName" android:maxLines="1" android:inputType="text"/>
            <EditText android:textSize="18sp" android:id="@+id/module" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="moduleKey" android:maxLines="1" android:inputType="text"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/remove" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pm_setting_remove"/>
    </LinearLayout>
</LinearLayout>
