<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#66000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="44dp">
            <TextView android:textSize="16dp" android:textColor="#666666" android:layout_gravity="center" android:id="@+id/btn_cancel" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@android:string/cancel"/>
            <TextView android:textSize="18dp" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/tv_picker_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
            <TextView android:textSize="16dp" android:textColor="#666666" android:layout_gravity="center" android:id="@+id/btn_confirm" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@android:string/ok"/>
        </LinearLayout>
        <ImageView android:layout_gravity="bottom" android:id="@+id/iv_title_shadow" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/pcs_title_shadow" android:scaleType="fitXY"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
