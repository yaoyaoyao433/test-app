<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/score_parent" android:paddingLeft="12dp" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
