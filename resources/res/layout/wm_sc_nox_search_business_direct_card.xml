    <com.sankuai.waimai.store.view.RoundedCornerImageView android:id="@+id/brand" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:src="#f4f4f4" app:cornerRadius="6dp" app:ratio="4.375"/>
</LinearLayout>
