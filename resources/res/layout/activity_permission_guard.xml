<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/parent_layout" android:background="@color/translucent" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/bottom_layout" android:background="@drawable/permission_dialog_auth_bg" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="210dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
            <ImageView android:id="@+id/logo_iv" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/permission_logo_bg" android:scaleType="centerCrop"/>
            <TextView android:textSize="14sp" android:textColor="#e6000000" android:id="@+id/bu_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp"/>
            <TextView android:textSize="14sp" android:textColor="#e6000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="申请"/>
        </LinearLayout>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#e6000000" android:ellipsize="end" android:id="@+id/permission_desc_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:singleLine="true"/>
        <TextView android:textSize="13sp" android:textColor="#80000000" android:id="@+id/use_desc_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/all_guard_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
            <RelativeLayout android:gravity="center_vertical" android:id="@+id/select_layout" android:background="@color/transparent" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <ImageView android:id="@+id/select_iv" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/icon_unchecked" android:scaleType="centerCrop" android:layout_centerVertical="true"/>
                <TextView android:textSize="13sp" android:textColor="#80000000" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="允许APP内其他模块也获取该信息" android:layout_toRightOf="@+id/select_iv"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingBottom="58dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="45dp">
            <TextView android:textSize="14sp" android:textColor="#e6000000" android:gravity="center" android:id="@+id/refuse_tv" android:background="@drawable/permission_dialog_auth_bottom_refuse" android:layout_width="0dp" android:layout_height="45dp" android:text="拒绝" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#b3000000" android:gravity="center" android:id="@+id/agree_tv" android:background="@drawable/permission_dialog_auth_bottom_agree" android:layout_width="0dp" android:layout_height="45dp" android:layout_marginLeft="12dp" android:text="允许" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
