        <TextView android:textSize="20dp" android:textColor="@color/paybase__half_page_content_text_color" android:gravity="center" android:id="@+id/alert_btn2" android:layout_width="match_parent" android:layout_height="54dp" android:layout_marginTop="12dp" android:layout_marginBottom="0dp" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
