<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:background="@drawable/paybase__half_page_bg_alert_with_btn" android:layout_width="match_parent" android:layout_height="wrap_content">
