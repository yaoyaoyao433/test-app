<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/share_desp_parent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="10dp">
        <ImageView android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/wm_share_divider_horizontal" android:scaleType="fitXY"/>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:background="@color/wm_share_white" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/share_desp_icon" android:visibility="gone" android:layout_width="21dp" android:layout_height="21dp" android:layout_marginRight="10dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/wm_share_active_message_color" android:gravity="center_vertical" android:id="@+id/share_desp" android:background="@color/wm_share_white" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <GridView android:id="@+id/gv_share_apps" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@drawable/wm_share_bg_clickable" android:horizontalSpacing="1dp" android:stretchMode="columnWidth" android:numColumns="4"/>
    <TextView android:textSize="16sp" android:textColor="@color/wm_common_43" android:gravity="center" android:id="@+id/txt_share_channel_empty" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:text="@string/wm_share_not_install_wx_qq"/>
</LinearLayout>
