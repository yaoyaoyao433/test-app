<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.sankuai.waimai.platform.widget.RoundedCornerFrameLayout android:id="@+id/holder" android:background="#f8f8f8" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="8dp" android:layout_marginRight="8dp" app:cornerRadius="4dp">
        <ImageView android:layout_gravity="center" android:id="@+id/picture" android:layout_width="50dp" android:layout_height="15dp" android:scaleType="fitXY"/>
        <LinearLayout android:gravity="center" android:id="@+id/text_total" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/filter_icon" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="4dp"/>
            <TextView android:textSize="12dp" android:textColor="#575859" android:gravity="center" android:id="@+id/filter_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.sankuai.waimai.platform.widget.RoundedCornerFrameLayout>
</LinearLayout>
