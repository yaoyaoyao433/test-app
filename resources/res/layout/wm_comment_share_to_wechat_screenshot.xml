<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#f4f4f4" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:background="@drawable/wm_comment_bg_share" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="162.5dp">
            <FrameLayout android:layout_width="70dp" android:layout_height="70dp">
                <ImageView android:layout_gravity="center" android:id="@+id/img_share_comment_poi_logo" android:layout_width="70dp" android:layout_height="70dp" android:scaleType="centerCrop"/>
                <View android:background="@drawable/wm_comment_round_border" android:layout_width="70dp" android:layout_height="70dp"/>
            </FrameLayout>
            <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/txt_share_comment_poi_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="10dp" android:layout_marginRight="25dp" android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:paddingLeft="25dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="20dp">
            <View android:layout_gravity="center_vertical" android:background="@color/wm_common_divider_1" android:layout_width="0dp" android:layout_height="0.5dp" android:layout_weight="1"/>
            <ImageView android:layout_gravity="center_vertical" android:layout_width="5.5dp" android:layout_height="5.5dp" android:src="@drawable/wm_comment_img_share_divider_node" android:layout_weight="0"/>
            <TextView android:textSize="14sp" android:textColor="#999999" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_comment_my_evaluation"/>
            <ImageView android:layout_gravity="center_vertical" android:layout_width="5.5dp" android:layout_height="5.5dp" android:src="@drawable/wm_comment_img_share_divider_node" android:layout_weight="0"/>
            <View android:layout_gravity="center_vertical" android:background="@color/wm_common_divider_1" android:layout_width="0dp" android:layout_height="0.5dp" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_share_comment_stars" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
        <ImageView android:layout_width="15dp" android:layout_height="13.5dp" android:layout_marginLeft="15dp" android:layout_marginTop="4dp" android:src="@drawable/wm_comment_img_share_left_quote" android:scaleType="fitXY"/>
        <TextView android:textSize="18sp" android:textColor="#333333" android:id="@+id/txt_share_comment_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="6.5dp" android:layout_marginRight="25dp" android:lineSpacingMultiplier="1.3"/>
        <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/txt_share_comment_praise_food" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="10dp" android:layout_marginRight="25dp"/>
        <ImageView android:layout_gravity="right" android:layout_width="29.5dp" android:layout_height="26dp" android:layout_marginTop="5dp" android:layout_marginRight="15dp" android:layout_marginBottom="27.5dp" android:src="@drawable/wm_comment_img_share_right_quote" android:scaleType="fitXY"/>
        <include layout="@layout/wm_comment_layout_share_qrcode_info"/>
    </LinearLayout>
</FrameLayout>
