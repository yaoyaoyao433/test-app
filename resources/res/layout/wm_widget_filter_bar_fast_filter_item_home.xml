<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rl_activity_cond" android:layout_width="match_parent" android:layout_height="28dp">
    <View android:id="@+id/txt_bg_activity_cond" android:background="@drawable/wm_widget_filter_bar_fastfilter_dialog_card_item_background_home" android:layout_width="match_parent" android:layout_height="28dp"/>
    <ImageView android:id="@+id/image_filter_item_background" android:layout_width="50dp" android:layout_height="15dp" android:layout_marginTop="7.5dp" android:scaleType="fitCenter" android:layout_centerInParent="true"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/img_activity_cond" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="5dp" android:scaleType="fitCenter"/>
