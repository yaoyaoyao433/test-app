        <View android:layout_gravity="top" android:id="@+id/txt_bubble" android:background="@drawable/wm_widget_filter_bar_background_tab_bubble" android:layout_width="5dp" android:layout_height="5dp"/>
    </LinearLayout>
    <View android:id="@+id/txt_bubble_copy" android:background="@drawable/wm_widget_filter_bar_background_tab_bubble" android:visibility="gone" android:layout_width="5dp" android:layout_height="5dp" android:layout_marginTop="5dp" android:layout_alignParentRight="true"/>
</RelativeLayout>
