<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/wm_sc_order_detail_card_item_bg" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ff222426" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/wm_sc_prescription_info"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView android:textSize="14sp" android:textColor="#ff858687" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_sc_prescription_doctors"/>
        <TextView android:textSize="14sp" android:textColor="#ff222426" android:id="@+id/doctors" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/record" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView android:textSize="14sp" android:textColor="#ff858687" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_sc_prescription_record"/>
        <TextView android:textSize="14sp" android:textColor="#ff222426" android:id="@+id/record_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_sc_shop_view_coupon" android:drawableRight="@drawable/wm_sc_prescription_electronic" android:drawablePadding="7dp" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/pharmacistArea" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView android:textSize="14sp" android:textColor="#ff858687" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_sc_prescription_pharmacist"/>
        <TextView android:textSize="14sp" android:textColor="#ff222426" android:id="@+id/pharmacist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/electronic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="16dp">
        <TextView android:textSize="14sp" android:textColor="#ff858687" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_sc_prescription_electronic"/>
        <TextView android:textSize="14sp" android:textColor="#ff222426" android:id="@+id/electronic_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_sc_shop_view_coupon" android:drawableRight="@drawable/wm_sc_prescription_electronic" android:drawablePadding="7dp" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
