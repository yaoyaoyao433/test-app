<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:andrroid="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/layout_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_poi" android:background="@color/wm_smart_assistant_poi_backgroud_color" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <ImageView android:id="@+id/img_poi" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="5dp" android:scaleType="fitXY"/>
        <TextView android:textSize="14sp" android:textColor="@color/wm_common_text_main" android:ellipsize="end" android:id="@+id/txt_poi" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1"/>
        <include android:id="@+id/img_arrow_poi" layout="@layout/wm_common_view_cell_arrow_right"/>
    </LinearLayout>
    <View android:background="#33d8d8d8" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <RelativeLayout android:id="@+id/layout_food" android:background="@color/wm_common_white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <ImageView android:id="@+id/img_food" android:layout_width="63dp" android:layout_height="63dp" android:layout_marginRight="10dp" android:scaleType="fitXY"/>
        <TextView android:textSize="16dp" android:textColor="@color/wm_common_text_main" android:ellipsize="end" android:id="@+id/txt_food_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:maxEms="14" android:layout_toRightOf="@+id/img_food"/>
        <TextView android:textSize="11dp" android:textColor="@color/wm_common_text_hint" android:ellipsize="end" android:id="@+id/txt_food_spec" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxLines="1" android:maxEms="14" android:layout_toRightOf="@+id/img_food" android:layout_below="@+id/txt_food_name"/>
        <TextView android:textSize="16dp" android:textColor="@color/wm_common_text_money" android:ellipsize="end" android:id="@+id/txt_food_real_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxWidth="75dp" android:maxLines="1" android:layout_toRightOf="@+id/img_food" android:layout_alignBottom="@+id/img_food"/>
        <TextView android:textSize="11dp" android:textColor="#a9a9a9" android:ellipsize="end" android:id="@+id/txt_food_origin_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginBottom="3dp" android:maxWidth="55dp" android:maxLines="1" android:layout_toRightOf="@+id/txt_food_real_price" android:layout_alignBottom="@+id/img_food"/>
        <Button android:textSize="12dp" android:id="@+id/btn_buy" android:layout_width="70dp" android:layout_height="30dp" android:text="@string/wm_sa_purchase_single" android:layout_alignBottom="@+id/img_food" android:layout_alignParentRight="true" style="@style/WmButton.AutoWidth.Solid"/>
        <TextView android:textSize="12dp" android:textColor="@color/wm_common_text_hint" android:id="@+id/txt_none_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="@string/wm_sa_non_saleable_time" android:drawableLeft="@drawable/wm_smart_assistant_temp_poi_and_sku_none_time" android:drawablePadding="4dp" android:layout_alignBottom="@+id/img_food" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/layout_recommend_food" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
