<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="63dp" android:layout_marginTop="10dp">
    <ImageView android:id="@+id/spu_pic" android:layout_width="63dp" android:layout_height="63dp" android:scaleType="centerCrop"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/spu_pic" android:layout_centerVertical="true">
        <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/txt_spu_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/txt_spu_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:divider="@drawable/wm_common_horizontal_linear_layout_divider_6dp" android:layout_below="@+id/txt_spu_name" android:showDividers="middle" android:dividerPadding="4dp">
            <TextView android:textSize="11sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/month_sales" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:maxLines="1"/>
            <TextView android:textSize="11sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/praise_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt_spu_info">
            <TextView android:textSize="16sp" android:textColor="#fb4f44" android:id="@+id/txt_spu_price" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="11sp" android:textColor="#a9a9a9" android:id="@+id/txt_spu_origin_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView android:textSize="12sp" android:textColor="#333333" android:gravity="center" android:id="@+id/btn_pick_one" android:background="@drawable/wm_common_btn_solid_highlight_shape" android:layout_width="70dp" android:layout_height="28dp" android:text="@string/wm_sa_buy_one_portion" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
