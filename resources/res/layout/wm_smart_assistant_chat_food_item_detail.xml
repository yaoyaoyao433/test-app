<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/img_food_icon" android:layout_width="40dp" android:layout_height="40dp" android:scaleType="fitXY" android:layout_alignParentLeft="true"/>
    <TextView android:textSize="14sp" android:textColor="@color/wm_common_text_main" android:ellipsize="end" android:id="@+id/txt_food_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxLines="1" android:maxEms="14" android:layout_toRightOf="@+id/img_food_icon"/>
    <TextView android:textSize="12sp" android:textColor="@color/wm_common_text_hint" android:id="@+id/txt_food_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/txt_food_name" android:layout_alignLeft="@+id/txt_food_name"/>
    <TextView android:textSize="11sp" android:textColor="@color/wm_common_text_hint" android:id="@+id/txt_food_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/txt_food_name" android:layout_alignParentRight="true"/>
    <TextView android:textSize="11sp" android:textColor="@color/wm_common_text_hint" android:id="@+id/txt_food_spec" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_toLeftOf="@+id/txt_food_count" android:layout_alignTop="@+id/txt_food_count"/>
</RelativeLayout>
