        <ImageView android:layout_gravity="center_vertical" android:id="@+id/icon_search" android:background="@drawable/agentmap_navibar_icon_search" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="11dp" android:scaleType="fitXY"/>
