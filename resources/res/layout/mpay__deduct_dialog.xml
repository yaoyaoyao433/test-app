<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/mpay__dialog_background" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/mpay__black1" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/deduct_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:singleLine="true"/>
        <TextView android:textSize="14dp" android:textColor="@color/mpay__black1" android:id="@+id/deduct_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
            <TextView android:textSize="12dp" android:textColor="@color/mpay__black3" android:id="@+id/deduct_rule_prename" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="12dp" android:textColor="@color/paybase__agreement_color" android:id="@+id/deduct_rule_sufname" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_marginTop="30dp" style="@style/paybase__horizonal_divider"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/choice_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="17dp" android:textColor="@color/paybase__text_color_2" android:gravity="center" android:id="@+id/discard_deduct" android:background="@drawable/mpay__bg_alert_left_btn" android:layout_width="0dp" android:layout_height="match_parent" android:singleLine="true" android:layout_weight="1"/>
        <View style="@style/paybase__vertical_divider"/>
        <TextView android:textSize="17dp" android:textColor="@color/paybase__base_green" android:gravity="center" android:layout_gravity="center" android:id="@+id/use_deduct" android:background="@drawable/mpay__bg_alert_right_btn" android:layout_width="0dp" android:layout_height="match_parent" android:singleLine="true" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
