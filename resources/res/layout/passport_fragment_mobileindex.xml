            <LinearLayout android:orientation="vertical" android:paddingRight="40dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/passport_mobile_tips" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="43dp" android:layout_marginRight="3dp" android:layout_marginBottom="10dp" android:text="@string/passport_mobile_login_tips"/>
