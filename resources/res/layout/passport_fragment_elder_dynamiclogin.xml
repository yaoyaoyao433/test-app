<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="34dp" android:layout_marginRight="34dp">
        <TextView android:textSize="25dp" android:textStyle="bold" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:text="@string/passport_input_dynamic_code" android:includeFontPadding="false"/>
        <TextView android:textSize="17dp" android:textColor="#ff767676" android:id="@+id/phone_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/passport_sms_send_failue" android:maxLines="2" android:includeFontPadding="false"/>
        <com.meituan.passport.view.VerificationFrameView android:id="@+id/verify_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp"/>
        <TextView android:textSize="18dp" android:textColor="#767676" android:id="@+id/passport_code_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp"/>
        <com.meituan.passport.view.TextButton android:textSize="18dp" android:gravity="center" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginTop="24dp" android:includeFontPadding="false"/>
    </LinearLayout>
</ScrollView>
