<?xml version="1.0" encoding="utf-8"?>
<com.dianping.widget.view.NovaRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.sankuai.waimai.platform.widget.RatioImageView android:id="@+id/img_poi_product_image" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop" app:ratio="0.77"/>
    <ImageView android:id="@+id/img_poi_product_tag_image" android:visibility="gone" android:layout_width="40dp" android:layout_height="14dp" android:scaleType="fitXY"/>
    <TextView android:textSize="11sp" android:textColor="@color/takeout_white" android:gravity="center" android:id="@+id/txt_poi_product_tag_info" android:background="@drawable/wm_common_poi_list_product_tag_bg" android:paddingLeft="3dp" android:paddingRight="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="15dp"/>
    <TextView android:textSize="14sp" android:id="@+id/txt_poi_product_name" android:layout_marginTop="5dp" android:layout_below="@+id/img_poi_product_image" android:layout_centerHorizontal="true" style="@style/WmText"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt_poi_product_name" android:layout_centerHorizontal="true">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/wm_common_text_money" android:id="@+id/txt_poi_product_price" style="@style/WmText"/>
        <TextView android:textSize="11sp" android:textColor="@color/wm_common_text_auxiliary" android:id="@+id/txt_poi_product_origin_price" android:layout_marginLeft="5dp" style="@style/WmText"/>
    </LinearLayout>
</com.dianping.widget.view.NovaRelativeLayout>
