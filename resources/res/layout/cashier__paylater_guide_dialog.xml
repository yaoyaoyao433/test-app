<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/root_view" android:background="@drawable/cashier__bg_paylater_guide_dialog" android:paddingLeft="@dimen/cashier__paylater_guide_dialog_horizontal_padding" android:paddingRight="@dimen/cashier__paylater_guide_dialog_horizontal_padding" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
