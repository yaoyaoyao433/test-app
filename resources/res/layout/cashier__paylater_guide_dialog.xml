        <TextView android:textSize="@dimen/cashier__paylater_guide_dialog_title_textsize" android:textStyle="bold" android:textColor="@color/cashier__color" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/cashier__paylater_guide_dialog_title_marginBottom"/>
