<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.github.chrisbanes.xdphotoview.PhotoView android:id="@+id/img" android:background="#ff000000" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/img_back" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/identifycard_recognizer_icon_circle_back"/>
    <RelativeLayout android:id="@+id/bottom_layout" android:background="#66000000" android:paddingLeft="10dp" android:paddingTop="20dp" android:paddingRight="10dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="15sp" android:textColor="#ffffffff" android:gravity="center" android:layout_gravity="start|center_vertical" android:id="@+id/txt_retry" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="重新拍摄"/>
        <TextView android:textSize="15sp" android:textColor="#ffffffff" android:gravity="center" android:layout_gravity="end|center_vertical" android:id="@+id/txt_confirm" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="确认并提交" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
