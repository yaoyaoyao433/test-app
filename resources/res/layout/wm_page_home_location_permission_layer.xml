<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/location_permission_layer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp">
    <ImageView android:id="@+id/location_wm_up_arrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="4dp" android:src="@drawable/wm_page_main_location_up_arrow"/>
    <ImageView android:layout_gravity="right" android:id="@+id/location_mt_up_arrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="55dp" android:src="@drawable/wm_page_main_location_up_arrow"/>
    <RelativeLayout android:background="@drawable/wm_page_home_location_dialog_bg" android:paddingLeft="12dp" android:paddingTop="8.5dp" android:paddingBottom="8.5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/location_layer_close" android:paddingLeft="19.5dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/wm_page_main_location_dialog_close"/>
        </FrameLayout>
        <TextView android:textSize="11sp" android:textColor="#ffffff" android:id="@+id/location_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="开启后才能看到附近的外卖商家哦～" android:layout_below="@+id/location_title"/>
        <TextView android:textSize="11sp" android:textColor="#222426" android:id="@+id/location_layer_open" android:background="@drawable/wm_page_home_location_dialog_btn_bg" android:paddingLeft="8dp" android:paddingTop="4.5dp" android:paddingRight="8dp" android:paddingBottom="4.5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="去开启" android:layout_toLeftOf="@+id/location_layer_close" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/location_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="定位服务未开启"/>
    </RelativeLayout>
</LinearLayout>
