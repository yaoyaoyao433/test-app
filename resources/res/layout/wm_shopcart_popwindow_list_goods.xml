<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout_goods_list" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="@drawable/wm_shopcart_bg_guide_poi_list" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/fl_list_shop_cart"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/tips_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/layout_product_info">
        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_shop_cart_try_lucky_bar" android:background="@drawable/wm_shopcart_try_lucky_bar_background" android:paddingLeft="12dp" android:paddingTop="8dp" android:paddingRight="12dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.sankuai.waimai.restaurant.shopcart.widget.tryLucky.TryLuckyTipsLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/text_shop_cart_try_lucky_tips_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/text_shop_cart_try_lucky_tag"/>
            <TextView android:textSize="11sp" android:textColor="@color/wm_shopcart_wm_shopcart_try_lucky_tag_old" android:id="@+id/text_shop_cart_try_lucky_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/wm_shopcart_try_lucky_tag" android:maxLines="1" android:layout_alignParentRight="true" android:layout_marginStart="8dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_product_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/fl_list_shop_cart"/>
    <FrameLayout android:id="@+id/fl_list_shop_cart" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <com.sankuai.waimai.restaurant.shopcart.widget.draglist.DragSortListView android:id="@+id/list_shop_cart" android:background="#ffffff" android:paddingBottom="70dp" android:visibility="visible" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@drawable/wm_shopcart_list_selector" android:cacheColorHint="@color/wm_shopcart_transparent" android:divider="@null" dslv:collapsed_height="2dp" dslv:drag_enabled="true" dslv:drag_handle_id="@+id/drag_handle" dslv:drag_scroll_start="0.33" dslv:drag_start_mode="onLongPress" dslv:float_alpha="0.6" dslv:max_drag_scroll_speed="0.5" dslv:slide_shuffle_speed="0.3" dslv:track_drag_sort="false" dslv:use_default_controller="false"/>
        <include android:orientation="vertical" android:id="@+id/float_view__pocket" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/wm_shopcart_adapter_pocket_item"/>
    </FrameLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tips_view">
        <com.sankuai.waimai.platform.widget.dialog.view.AnimatableImageView android:id="@+id/shopcart_loading" android:background="@drawable/wm_core_bg_progress_round" android:visibility="gone" android:layout_width="@dimen/wm_common_progress_round_width" android:layout_height="@dimen/wm_common_progress_round_height" android:scaleType="centerInside" android:layout_centerInParent="true" app:drawableRes="@drawable/wm_common_progress_rotate"/>
    </RelativeLayout>
</RelativeLayout>
