<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:id="@+id/layout_local_share_view_layout" android:visibility="invisible" android:layout_width="210dp" android:layout_height="170dp">
    <ImageView android:id="@+id/local_share_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:minWidth="210dp" android:minHeight="170dp"/>
    <FrameLayout android:id="@+id/local_share_lable_layout" android:background="@drawable/wm_share_top_label_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="#ffd161" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/local_share_lable_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="2dp" android:layout_marginRight="8dp" android:layout_marginBottom="2dp" android:singleLine="true"/>
    </FrameLayout>
    <LinearLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="vertical" android:background="@drawable/wm_share_bottom_mask_bg" android:paddingLeft="6dp" android:paddingRight="20dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="85dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/local_share_score_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="34dp">
            <ImageView android:id="@+id/local_share_score_star1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/wm_restaurant_score_star_empty_icon"/>
            <ImageView android:id="@+id/local_share_score_star2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:src="@drawable/wm_restaurant_score_star_empty_icon"/>
            <ImageView android:id="@+id/local_share_score_star3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:src="@drawable/wm_restaurant_score_star_empty_icon"/>
            <ImageView android:id="@+id/local_share_score_star4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:src="@drawable/wm_restaurant_score_star_empty_icon"/>
            <ImageView android:id="@+id/local_share_score_star5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:src="@drawable/wm_restaurant_score_star_empty_icon"/>
            <TextView android:textSize="11sp" android:textColor="#ffffff" android:id="@+id/local_share_score_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <com.sankuai.waimai.platform.widget.AutoWrapHorizontalLayout android:id="@+id/local_share_bottom_label_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" custom:vertical_divider="0dp" custom:horizontal_divider="4dp" custom:max_lines="1"/>
    </LinearLayout>
</FrameLayout>
