<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#33312e" android:id="@+id/title" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="12sp" android:textColor="#858687" android:id="@+id/legal_text" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/background" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/root_view" android:paddingTop="4dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="center_horizontal" android:id="@+id/expand_btn" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
            <TextView android:textSize="12sp" android:textColor="#575859" android:gravity="center" android:id="@+id/tv_expand_btn_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="查看更多推荐组合"/>
            <ImageView android:id="@+id/iv_expand_btn_arrow" android:background="@drawable/wm_sc_drug_more_poi_arrow" android:layout_width="9dp" android:layout_height="9dp" android:layout_marginLeft="3dp" android:layout_marginTop="3dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
