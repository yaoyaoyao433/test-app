<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="250dp" android:layout_height="200dp">
    <ImageView android:id="@+id/img_back" android:layout_width="250dp" android:layout_height="200dp" android:scaleType="centerCrop"/>
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/share_miniprogram_card_bg" android:scaleType="centerCrop"/>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:paddingBottom="9dp" android:layout_width="250dp" android:layout_height="match_parent" android:paddingStart="10dp" android:paddingEnd="23dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/score_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RatingBar android:id="@+id/score_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:isIndicator="true" android:layout_marginEnd="3dp" style="@style/RatingBar.Small"/>
            <TextView android:textSize="10sp" android:textColor="#ffffff" android:id="@+id/score_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="9dp"/>
            <TextView android:textSize="10sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/per_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/poi_address_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="10sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/poi_category" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true" android:layout_marginEnd="7dp"/>
            <TextView android:textSize="10sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/poi_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true"/>
            <TextView android:textSize="10sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/poi_land_market" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true"/>
        </LinearLayout>
        <TextView android:textSize="10sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/poi_tel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true"/>
    </LinearLayout>
</FrameLayout>
