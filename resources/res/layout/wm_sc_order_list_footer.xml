<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/ll_orderlist_footer_wrapper" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/ll_orderlist_footer_before" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="0.5dp" android:layout_marginLeft="15dp" android:src="@drawable/wm_sc_common_divider_horizontal" android:scaleType="fitXY" android:layout_weight="1"/>
        <TextView android:textSize="12sp" android:textColor="@color/wm_sg_color_666666" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:text="@string/wm_sc_order_list_bottom_txt"/>
        <ImageView android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="0.5dp" android:layout_marginRight="15dp" android:src="@drawable/wm_sc_common_divider_horizontal" android:scaleType="fitXY" android:layout_weight="1"/>
