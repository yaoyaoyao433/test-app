        <TextView android:textSize="12sp" android:textColor="@color/wm_sg_color_666666" android:layout_gravity="center" android:id="@+id/tv_order_list_footer_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/takeout_orderList_no_more_orders"/>
