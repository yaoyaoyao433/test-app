<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/lay_title_bar" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="44dp">
        <com.dianping.picassocontroller.widget.NavigationItemView android:gravity="center" android:layout_gravity="center" android:id="@+id/title_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/left_container" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="#000" android:id="@+id/tv_back" android:layout_width="wrap_content" android:layout_height="match_parent" android:minWidth="30dp" android:drawableLeft="@drawable/pcs_icon_back"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/right_container" android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </FrameLayout>
    <View android:layout_gravity="bottom" android:id="@+id/iv_title_shadow" android:background="#dadada" android:layout_width="match_parent" android:layout_height="1px"/>
</merge>
