<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingTop="15dp" android:paddingRight="15dp" android:paddingBottom="21dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12dp" android:textColor="@color/cashier__color" android:ellipsize="end" android:id="@+id/cashier_brand_text" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:lineSpacingExtra="5dp"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/cashier_agreement_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/cashier_agreement_tap_area" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatCheckBox android:layout_gravity="center_vertical" android:id="@+id/cashier_agreement_check_box" android:background="@drawable/paycommon__agreement_checkbox" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginRight="6dp" android:checked="false" android:button="@null"/>
            <TextView android:textSize="12dp" android:textColor="@color/cashier__color2" android:layout_gravity="center_vertical" android:id="@+id/cashier_agreement_prefix" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:textSize="12dp" android:textColor="@color/cashier__remind_agreement_text" android:layout_gravity="center_vertical" android:id="@+id/cashier_agreement_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
