<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="32dp" android:layout_marginTop="40dp" android:layout_marginRight="32dp">
    <TextView android:textSize="18sp" android:textColor="@color/passport_black1" android:id="@+id/input_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/passport_retrieve_set_new_password"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="48dp">
        <com.meituan.passport.view.PassportEditText android:theme="@style/passport_editText" android:textSize="20sp" android:textColorHint="#cbcbcb" android:id="@+id/input_passport" android:background="@null" android:layout_width="0dp" android:layout_height="33dp" android:hint="@string/passport_retrieve_set_new_password_hint" android:maxLines="1" android:maxLength="32" android:layout_weight="1" android:inputType="textPassword" android:imeOptions="actionDone"/>
        <com.meituan.passport.view.PassportClearTextView android:id="@+id/password_clean" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/passport_password_close"/>
        <com.meituan.passport.view.PassportPasswordEye android:id="@+id/password_eye_img" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/passport_password_eye"/>
    </LinearLayout>
    <View android:background="@color/passport_black3" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="3dp"/>
    <com.meituan.passport.view.PassportButton android:textSize="@dimen/passport_text_size_h16" android:id="@+id/commit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:minHeight="44dp" android:text="@string/passport_retrieve_save_new_password" style="?attr/buttonStyle"/>
</LinearLayout>
