<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="65dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="20dp" android:layout_toLeftOf="@+id/dcep_selected" android:layout_centerVertical="true">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/dcep_icon" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginRight="8dp"/>
            <RelativeLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textColor="@color/paybase__half_page_content_text_color" android:ellipsize="end" android:id="@+id/dcep_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_toLeftOf="@+id/dcep_name_ext" android:layout_centerVertical="true"/>
                <TextView android:textSize="16sp" android:textColor="@color/paybase__half_page_content_text_color" android:id="@+id/dcep_name_ext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <com.meituan.android.paycommon.lib.widgets.PayLabelContainer android:orientation="horizontal" android:id="@+id/dcep_label_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_marginTop="4dp" android:layout_marginRight="6dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/dcep_selected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:src="@drawable/mtpaysdk__payment_checkbox_unselected" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <View android:id="@+id/quickbind_gray_line" android:background="#f0f0f0" android:layout_marginLeft="51dp" android:layout_marginRight="24dp" android:layout_alignParentBottom="true" style="@style/paybase__horizonal_divider"/>
</RelativeLayout>
