<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/msc_error" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#777777" android:gravity="center" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="56dp" android:text="@string/msc_load_failed_msg"/>
    <TextView android:textSize="12sp" android:gravity="center" android:id="@+id/load_fail_detail_info" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="40dp" android:layout_marginRight="30dp" android:maxHeight="500dp" android:text="(UNKNOWN_ERROR)" android:layout_below="@+id/tv_title" android:textIsSelectable="true"/>
    <Button android:textSize="12sp" android:textStyle="bold" android:textColor="#222426" android:id="@+id/load_fail_retry_button" android:background="@drawable/msc_retry_buttonshape" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginBottom="56dp" android:text="@string/msc_load_failed_retry" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <Button android:textSize="12sp" android:textStyle="bold" android:textColor="#222426" android:id="@+id/load_fail_close_button" android:background="@drawable/msc_retry_buttonshape" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginBottom="56dp" android:text="@string/msc_load_failed_close" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>
