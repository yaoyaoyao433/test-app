<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/paybase__bg_pay_dialog" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="18sp" android:textColor="@color/paybase__text_color_2" android:layout_gravity="center_horizontal" android:id="@+id/guide_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="22dp"/>
    <TextView android:textSize="13sp" android:textColor="@color/paybase__text_color_3" android:layout_gravity="center_horizontal" android:id="@+id/guide_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/guide_img" android:layout_width="118dp" android:layout_height="90dp" android:layout_marginTop="22dp" android:src="@drawable/cashier__no_psw_guide_img"/>
    <LinearLayout android:layout_gravity="left" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="24dp">
        <TextView android:textSize="13sp" android:textColor="@color/paybase__text_color_3" android:id="@+id/guide_agreement_tip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="13sp" android:textColor="@color/paybase__agreement_color" android:id="@+id/guide_agreement" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button android:textSize="17sp" android:id="@+id/guide_open" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="15dp" android:layout_marginTop="14dp" android:layout_marginRight="15dp" android:layout_marginBottom="20dp" style="@style/mtpaysdk_button"/>
    <TextView android:textSize="17sp" android:textColor="@color/paybase__text_color_3" android:layout_gravity="center_horizontal" android:id="@+id/guide_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp"/>
</LinearLayout>
