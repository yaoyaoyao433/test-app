<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/top" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/http_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:text="API类型" android:layout_weight="2"/>
        <Spinner android:id="@+id/spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_weight="2"/>
        <TextView android:id="@+id/request_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:text="请求类型" android:layout_weight="2"/>
        <Spinner android:id="@+id/spinner2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_weight="2"/>
    </LinearLayout>
    <EditText android:id="@+id/view_url_sk_network_input" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="输入url" android:singleLine="true" android:inputType="textMultiLine" android:imeOptions="actionDone"/>
    <Button android:id="@+id/view_url" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="访问"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/top">
        <TextView android:id="@+id/response_text" android:paddingLeft="2dp" android:paddingTop="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>
