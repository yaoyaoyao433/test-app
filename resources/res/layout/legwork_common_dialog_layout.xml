<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/legwork_dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/legwork_common_text_color_FF2F2F2F" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/legwork_dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="21dp" android:layout_marginRight="25dp" android:text="Title" android:maxLines="2" fontPath="fonts/SF_Semibold.otf"/>
        <TextView android:textSize="14sp" android:textColor="@color/legwork_common_text_color_FF333333" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/legwork_dialog_body" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="13dp" android:layout_marginRight="25dp" android:layout_marginBottom="23dp" android:text="Body" android:maxLines="4" fontPath="fonts/SF_Regular.otf"/>
        <View android:id="@+id/body_divider" android:background="@color/legwork_divider_bg" android:layout_width="match_parent" android:layout_height="@dimen/legwork_divider_height"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/btn_container" android:layout_width="match_parent" android:layout_height="45dp">
            <TextView android:textSize="16sp" android:textColor="@color/legwork_common_text_color_FF2F2F2F" android:gravity="center_horizontal" android:id="@+id/legwork_dialog_ok" android:paddingTop="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="OK" android:layout_weight="1" fontPath="fonts/SF_Semibold.otf"/>
            <View android:id="@+id/legwork_btn_line" android:background="@color/legwork_divider_bg" android:layout_width="@dimen/legwork_divider_height" android:layout_height="43dp"/>
            <TextView android:textSize="16sp" android:textColor="@color/legwork_common_text_color_FF2F2F2F" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/legwork_dialog_cancel" android:paddingTop="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="Cancel" android:layout_weight="1" fontPath="fonts/SF_Medium.otf"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
