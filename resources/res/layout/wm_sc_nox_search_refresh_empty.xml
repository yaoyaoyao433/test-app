<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:background="@color/wm_sc_nox_search_empty_bg" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2"/>
    <ImageView android:id="@+id/img_no_content_icon" android:layout_width="@dimen/wm_sc_common_dimen_200" android:layout_height="@dimen/wm_sc_common_dimen_150" android:src="@drawable/wm_sc_nox_search_no_result"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wm_sc_nox_search_empty_text_margin">
        <TextView android:textSize="14sp" android:textColor="@color/wm_sc_nox_search_label_text" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_empty_message_forbidden" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="11sp" android:textColor="@color/wm_sc_nox_search_color_999999" android:id="@+id/txt_empty_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_below="@+id/txt_empty_message_forbidden" style="@style/wm_sc_nox_search_style_txt_empty"/>
        <TextView android:textSize="@dimen/wm_sc_common_dimen_textsize_12" android:textColor="@color/wm_sc_nox_search_color_222426" android:gravity="center" android:id="@+id/tv_login" android:background="@drawable/wm_common_btn_solid_new" android:visibility="gone" android:layout_width="@dimen/wm_sc_common_dimen_89" android:layout_height="@dimen/wm_sc_common_dimen_28" android:layout_marginTop="@dimen/wm_sc_common_dimen_10" android:text="@string/wm_sc_nox_search_no_login" android:layout_below="@+id/txt_empty_message_forbidden" android:layout_centerHorizontal="true"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_location_fail_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/txt_empty_message" android:layout_centerHorizontal="true">
            <TextView android:textSize="14sp" android:textColor="#222426" android:gravity="center" android:id="@+id/tv_manual_locate" android:background="@drawable/wm_common_btn_solid_light_new" android:layout_width="80dp" android:layout_height="36dp" android:text="@string/wm_sc_search_manual_locate" android:layout_marginEnd="16dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/wm_sc_nox_search_color_222426" android:gravity="center" android:id="@+id/tv_reload" android:background="@drawable/wm_common_btn_solid_new" android:layout_width="80dp" android:layout_height="36dp" android:text="@string/wm_sc_search_reload" android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="4"/>
</LinearLayout>
