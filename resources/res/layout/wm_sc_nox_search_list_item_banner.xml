<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/search_list_item_layout_top" android:layout_width="match_parent" android:layout_height="25dp" android:layout_marginTop="10dp" android:paddingStart="12dp" android:paddingEnd="12dp">
        <com.sankuai.waimai.store.view.RoundedCornerImageView android:id="@+id/search_banner_channel_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="25dp" android:layout_marginRight="6dp" android:scaleType="fitCenter" android:adjustViewBounds="true" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:cornerRadius="6dp"/>
        <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#33312e" android:ellipsize="end" android:id="@+id/search_banner_channel_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:maxWidth="140dp" android:maxLines="1" android:layout_centerVertical="true" android:layout_toEndOf="@+id/search_banner_channel_icon"/>
        <TextView android:textSize="12sp" android:textColor="#666460" android:ellipsize="end" android:id="@+id/search_banner_channel_link" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:maxLines="1" android:drawablePadding="2dp" android:layout_centerVertical="true" android:drawableEnd="@drawable/wm_sc_nox_search_banner_arrow" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/search_banner_img_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.sankuai.waimai.store.view.RoundedCornerImageView android:id="@+id/search_banner_image" android:layout_width="match_parent" android:layout_height="80dp" app:cornerRadius="12dp"/>
        <TextView android:textSize="10sp" android:textColor="@color/white" android:layout_gravity="bottom|right" android:id="@+id/search_banner_iv_ad" android:paddingLeft="5dp" android:paddingTop="1.5dp" android:paddingRight="5dp" android:paddingBottom="1.5dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/search_list_item_layout_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#33312e" android:ellipsize="end" android:id="@+id/high_risk_drug_name" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:layout_weight="1" android:layout_marginStart="12dp" android:layout_marginEnd="4dp"/>
            <TextView android:textSize="11sp" android:layout_gravity="center_vertical" android:id="@+id/high_risk_drug_category" android:paddingTop="0.5dp" android:paddingBottom="0.5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:paddingStart="4dp" android:paddingEnd="4dp" android:layout_marginEnd="12dp"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textColor="#666460" android:id="@+id/high_risk_drug_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="12dp" android:includeFontPadding="false" android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
    </LinearLayout>
</LinearLayout>
