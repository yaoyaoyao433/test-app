                    <TextView android:textSize="@dimen/mpay__text_size_6" android:textColor="@color/mpay__black3" android:id="@+id/bindcard_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/insurance_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:layout_marginBottom="19dp">
                <ImageView android:id="@+id/insurance_icon" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginRight="5dp" android:scaleType="fitXY"/>
                <TextView android:textSize="12dp" android:textColor="@color/paybase__black3" android:id="@+id/insurance_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
