                <LinearLayout android:gravity="center_vertical" android:id="@+id/mpay_bindcard_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/paycommon__global_padding" android:layout_marginTop="@dimen/mpay__bindcard_container_margin_top" android:layout_marginRight="@dimen/paycommon__global_padding">
