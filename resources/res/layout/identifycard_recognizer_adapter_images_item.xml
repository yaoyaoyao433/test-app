<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="center" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
        <RelativeLayout android:gravity="center" android:layout_gravity="right" android:id="@+id/iv_select_delegate" android:layout_width="44dp" android:layout_height="44dp" android:layout_alignParentRight="true">
            <com.meituan.android.identifycardrecognizer.widgets.CircleImageView android:id="@+id/iv_select" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/identifycard_recognizer_photo_selector_check_not_select" android:scaleType="centerCrop"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@+id/mask" android:background="#ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.7"/>
</FrameLayout>
