<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/mpay__bg_list_row_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:paddingLeft="18dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/bank_icon" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="15dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1">
            <TextView android:textSize="15sp" android:textColor="@color/mpay__payment_text_color_primary_selector" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textSize="12sp" android:id="@+id/tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/banklist_divider" android:layout_marginLeft="20dp" android:layout_marginRight="18dp" style="@style/paybase__horizonal_divider"/>
    <View android:id="@+id/banklist_divider__bottom" style="@style/paybase__horizonal_divider"/>
</LinearLayout>
