<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:background="@drawable/wm_restaurant_collect_gift_dialog_coupon_bg_shadow" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="10dp" android:paddingTop="12dp" android:paddingRight="10dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="70dp" android:layout_height="56dp">
            <RelativeLayout android:id="@+id/discount_coupon_holder" android:background="@drawable/wm_restaurant_float_coupon_item_bg_free" android:visibility="gone" android:layout_width="70dp" android:layout_height="56dp">
                <LinearLayout android:orientation="horizontal" android:id="@+id/price_wrapper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_centerHorizontal="true">
                    <TextView android:textSize="12sp" android:textColor="#cc6f14" android:ellipsize="end" android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="Â¥" android:maxLines="1"/>
                    <TextView android:textSize="25sp" android:textColor="#cc6f14" android:ellipsize="end" android:layout_gravity="bottom" android:id="@+id/discount_coupon_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginTop="2.5dp" android:maxLines="1"/>
                </LinearLayout>
                <TextView android:textSize="11sp" android:textColor="#cc6f14" android:ellipsize="end" android:gravity="center" android:layout_gravity="bottom" android:id="@+id/discount_coupon_short_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-6dp" android:maxLines="1" android:layout_below="@+id/price_wrapper"/>
            </RelativeLayout>
            <ImageView android:id="@+id/product_coupon_pic" android:visibility="gone" android:layout_width="70dp" android:layout_height="56dp" android:scaleType="centerInside"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/text_size_14" android:textColor="@color/wm_common_text_main" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
                <TextView android:textSize="11sp" android:textColor="@color/wm_common_text_auxiliary" android:ellipsize="end" android:id="@+id/tv_sub_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="1"/>
            </LinearLayout>
            <ImageView android:id="@+id/iv_received" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/wm_restaurant_shop_collect_coupon_received_seal" android:scaleType="centerInside" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
