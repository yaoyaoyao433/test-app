<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
    <TextView android:textSize="15sp" android:textColor="@android:color/black" android:id="@+id/txt_url_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/offline_url"/>
    <TextView android:id="@+id/txt_url" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/txt_url_title" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/txt_url_title" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="15sp" android:textColor="@android:color/black" android:id="@+id/txt_scope_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/offline_scope" android:layout_below="@+id/txt_url"/>
    <TextView android:id="@+id/txt_scope" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/txt_scope_title" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/txt_scope_title" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="15sp" android:textColor="@android:color/black" android:id="@+id/txt_hash_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/offline_hash" android:layout_below="@+id/txt_scope"/>
    <TextView android:id="@+id/txt_hash" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/txt_hash_title" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/txt_hash_title" android:layout_alignParentEnd="true"/>
</RelativeLayout>
