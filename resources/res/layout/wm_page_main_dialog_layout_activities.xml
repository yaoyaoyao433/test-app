<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/layout_bg_top" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/layout_bg" android:background="#99000000" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/layout_bg_immersed" android:background="#99000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="right" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:src="@drawable/wm_common_dialog_close_ic"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/content_panel" android:focusable="true" android:clickable="true" android:layout_width="@dimen/wm_page_main_actinfo_dialog_width" android:layout_height="@dimen/wm_page_main_actinfo_dialog_height"/>
        <com.sankuai.waimai.platform.widget.pager.SimplePageIndicator android:layout_gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" app:childDrawable="@drawable/wm_common_arch_dot_white"/>
        <ImageView android:id="@+id/close" android:paddingTop="@dimen/wm_page_main_actinfo_dialog_close_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/wm_page_main_actinfo_dialog_close_height" android:src="@drawable/wm_common_dialog_close_ic"/>
    </LinearLayout>
</FrameLayout>
