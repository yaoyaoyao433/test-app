<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/shop_background_image" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0px" android:scaleType="centerCrop"/>
    <ImageView android:id="@+id/img_poi_blurred_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0px" android:scaleType="fitXY"/>
    <View android:layout_gravity="bottom" android:id="@+id/shop_header_gray" android:background="#000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0px" android:alpha="0.5"/>
