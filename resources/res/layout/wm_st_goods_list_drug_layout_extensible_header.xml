    <LinearLayout android:orientation="vertical" android:id="@+id/layout_header_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/basic_poi_info_layout"/>
    <View android:id="@+id/layout_divider_line" android:background="@color/wm_sc_common_dialog_divider" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/layout_header_view"/>
