<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/cashier_common_guide_dialog_content" android:background="@drawable/paybase__bg_pay_dialog" android:layout_width="300dp" android:layout_height="wrap_content">
    <ImageView android:id="@+id/common_dialog_close" android:paddingTop="15dp" android:paddingRight="15dp" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/cashier__card_pay_function_guide_dialog_close" android:layout_alignParentRight="true"/>
    <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/cashier__common_dialog_title" android:gravity="center" android:id="@+id/common_dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:maxLines="1" android:singleLine="true" android:layout_below="@+id/common_dialog_close" android:layout_centerHorizontal="true"/>
    <FrameLayout android:id="@+id/common_dialog_marketing_area" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:layout_below="@+id/common_dialog_title">
        <com.meituan.android.paybase.widgets.bankcard.RoundImageView android:id="@+id/marketing_background_image" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="18dp" android:layout_marginRight="18dp" android:src="@drawable/cashier__common_dialog_marketing_background" android:scaleType="fitXY"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/marketing_background_text" android:background="#00ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginRight="18dp">
            <TextView android:textSize="21dp" android:textStyle="bold" android:textColor="@color/cashier__common_dialog_marketing_main_title" android:gravity="center" android:layout_gravity="center" android:id="@+id/common_dialog_marketing_main_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:maxLines="2"/>
            <TextView android:textSize="14dp" android:textColor="@color/cashier__common_dialog_marketing_sub_title" android:gravity="center" android:layout_gravity="center" android:id="@+id/common_dialog_marketing_sub_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxLines="1" android:singleLine="true"/>
            <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/common_dialog_guide_pay_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:layout_marginBottom="21dp">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/common_dialog_guide_pay_type_pay_icon" android:layout_width="15dp" android:layout_height="15dp"/>
                <TextView android:textSize="14dp" android:textColor="@color/cashier__common_dialog_guide_pay_type_payment_name" android:gravity="center" android:id="@+id/common_dialog_guide_pay_type_payment_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:maxLines="1" android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout android:id="@+id/common_dialog_guide_button" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="18dp" android:layout_marginTop="15dp" android:layout_marginRight="18dp" android:layout_marginBottom="18dp" android:layout_below="@+id/common_dialog_marketing_area">
        <com.meituan.android.paybase.widgets.bankcard.RoundImageView android:id="@+id/common_dialog_guide_button_image" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/cashier__common_dialog_guide_button_background" android:scaleType="fitXY"/>
        <com.meituan.android.paybase.widgets.ProgressButton android:textSize="14dp" android:textStyle="bold" android:textColor="@color/cashier__common_dialog_guide_button_text" android:ellipsize="end" android:gravity="center" android:id="@+id/common_dialog_guide_button_text" android:background="#00ffffff" android:layout_width="match_parent" android:layout_height="45dp" android:singleLine="true"/>
    </FrameLayout>
</RelativeLayout>
