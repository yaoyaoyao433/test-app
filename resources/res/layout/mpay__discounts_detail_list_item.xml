<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="@drawable/mpay__discounts_detail_item_bg" android:paddingLeft="20dp" android:layout_width="match_parent" android:layout_height="60dp" android:baselineAligned="false">
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/mpay__text_size_6" android:textColor="@color/mpay__black0" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_question" android:visibility="gone" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="6dp" android:src="@drawable/paycommon__ic_question"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp">
            <TextView android:textSize="@dimen/mpay__text_size_6" android:textColor="@color/mpay__black3" android:ellipsize="end" android:id="@+id/mpay__discount_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:maxLines="1"/>
            <TextView android:textSize="@dimen/mpay__text_size_6" android:textColor="@color/mpay__black3" android:ellipsize="end" android:id="@+id/mpay__discount_agreement_prefix" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
            <TextView android:textSize="@dimen/mpay__text_size_6" android:textColor="@color/mpay__dark_blue" android:ellipsize="end" android:id="@+id/mpay__discount_agreement_name" android:layout_width="100dp" android:layout_height="wrap_content" android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/mpay__discount_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <ProgressBar android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_progress_bar" android:layout_width="44dp" android:layout_height="4dp" android:max="100" android:progressDrawable="@drawable/mpay__discount_progress_bar_bg" style="?android:attr/progressBarStyleHorizontal"/>
            <TextView android:textSize="10dp" android:textColor="@color/mpay__black3" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_progress_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/mpay_checkbox_tap_area" android:paddingRight="15dp" android:layout_width="100dp" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/mpay__text_size_6" android:textColor="@color/mpay__black0" android:ellipsize="end" android:id="@+id/mpay__discount_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:maxLines="1" android:layout_toLeftOf="@+id/mpay__discount_check_box" android:layout_centerVertical="true"/>
        <android.support.v7.widget.AppCompatCheckBox android:id="@+id/mpay__discount_check_box" android:background="@drawable/paycommon__agreement_yellow_checkbox" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginRight="6dp" android:button="@null" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
