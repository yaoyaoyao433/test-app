<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/order_food_area" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/order_food_pic" android:layout_width="40dp" android:layout_height="40dp" android:scaleType="centerCrop"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/order_food_pic" android:layout_centerVertical="true">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/txt_order_food_name" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textColor="#333333" android:id="@+id/txt_order_food_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/txt_order_food_price" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
    </LinearLayout>
</RelativeLayout>
