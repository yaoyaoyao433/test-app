<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:id="@+id/wm_order_status_map_city_delivery_infowindow" android:background="@drawable/wm_order_status_map_infowindow" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <FrameLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/order_status_layout" android:paddingLeft="15dp" android:paddingTop="10dp" android:paddingRight="15dp" android:paddingBottom="5dp" android:layout_width="250dp" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="@color/wm_common_text_highlight" android:id="@+id/txt_order_submit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_order_confirm_submit" android:drawablePadding="4dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/wm_common_text_auxiliary" android:layout_gravity="center" android:id="@+id/txt_order_rider" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_order_status_rider_take_order" android:drawablePadding="4dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/wm_common_text_auxiliary" android:layout_gravity="right" android:id="@+id/txt_order_poi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_order_status_poi_take_order" android:drawablePadding="4dp"/>
    </FrameLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="34dp" android:paddingRight="34dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
        <ImageView android:id="@+id/img_dot_1" android:background="@drawable/wm_order_status_city_delivery_dot_red" android:layout_width="9dp" android:layout_height="9dp"/>
        <View android:id="@+id/img_line_half_1" android:background="#d8d8d8" android:layout_width="50dp" android:layout_height="1dp"/>
        <View android:id="@+id/img_line_half_2" android:background="#d8d8d8" android:layout_width="30dp" android:layout_height="1dp"/>
        <ImageView android:id="@+id/img_dot_2" android:background="@drawable/wm_order_status_city_delivery_dot_black" android:layout_width="6dp" android:layout_height="6dp"/>
        <View android:id="@+id/img_line_half_3" android:background="#d8d8d8" android:layout_width="47dp" android:layout_height="1dp"/>
        <View android:id="@+id/img_line_half_4" android:background="#d8d8d8" android:layout_width="33dp" android:layout_height="1dp"/>
        <ImageView android:id="@+id/img_dot_3" android:background="@drawable/wm_order_status_city_delivery_dot_black" android:layout_width="6dp" android:layout_height="6dp"/>
    </LinearLayout>
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/wm_order_status_g_star_text_color" android:id="@+id/txt_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/wm_order_status_wait_patiently" android:drawableRight="@drawable/wm_order_detail_g_star_arrow" android:drawablePadding="2dp"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="#858687" android:id="@+id/txt_time_left_desc" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="10dp" android:text="@string/wm_order_status_left_time"/>
        <TextView android:textSize="12sp" android:textColor="#ff8000" android:id="@+id/txt_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="2dp" android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>
