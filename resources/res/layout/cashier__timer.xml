<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:id="@+id/cashier_remaining_time" android:layout_width="match_parent" android:layout_height="wrap_content">
