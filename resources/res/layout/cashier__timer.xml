    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/cashier_remaining_time_value" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="12dp" android:textColor="@color/cashier__gray" android:id="@+id/cashier_remaining_time_txt" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cashier__count_down"/>
