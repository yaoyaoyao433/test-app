        <TextView android:id="@+id/remain_time_min1" style="@style/cashier__remaining_time_display_num_revision"/>
        <TextView android:id="@+id/remain_time_min2" style="@style/cashier__remaining_time_display_num_revision"/>
        <TextView android:paddingBottom="1dp" android:text="@string/cashier__remaining_time_colon" style="@style/cashier__remaining_time_display_num_revision"/>
        <TextView android:id="@+id/remain_time_sec1" style="@style/cashier__remaining_time_display_num_revision"/>
        <TextView android:id="@+id/remain_time_sec2" style="@style/cashier__remaining_time_display_num_revision"/>
    </LinearLayout>
</LinearLayout>
