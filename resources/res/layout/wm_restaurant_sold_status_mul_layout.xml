<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_multiline" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/wm_common_text_auxiliary" android:id="@+id/multiline_takeout_sold_status_title" style="@style/WmText"/>
        <TextView android:textSize="@dimen/wm_common_text_size_small" android:id="@+id/multiline_takeout_sold_status_content" android:layout_marginTop="14dp" android:layout_marginBottom="30dp" android:lineSpacingExtra="11dp" style="@style/WmText.MultiLine"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_singleline" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/wm_common_text_auxiliary" android:id="@+id/singleline_takeout_sold_status_title" android:layout_marginTop="43dp" android:layout_marginBottom="43dp" style="@style/WmText"/>
        <TextView android:id="@+id/singleline_takeout_sold_status_content" android:layout_marginTop="43dp" android:layout_marginBottom="43dp" style="@style/WmText"/>
    </LinearLayout>
</LinearLayout>
