<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/layout_product_info_item" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/fl_list_shop_cart">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="5dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/img_product_icon" android:layout_width="17dp" android:layout_height="17dp"/>
                <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#222426" android:ellipsize="end" android:id="@+id/txt_product_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="神券省钱包" android:maxLines="1" android:layout_toLeftOf="@+id/img_member_explanation" android:layout_centerVertical="true"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/img_member_explanation" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginLeft="4dp" android:src="@drawable/wm_restaurant_goods_detail_ic_price_mark" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView android:textSize="11sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/txt_product_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="3dp" android:text="不参与满减" android:maxLines="1"/>
            <TextView android:textSize="11sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/txt_select_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:text="红包已到账。点击去结算，选择美团红包使用" android:maxLines="1"/>
        </LinearLayout>
        <com.meituan.roodesign.widgets.stepper.RooStepper android:id="@+id/roo_stepper" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:background="#d8d8d8" android:layout_width="match_parent" android:layout_height="1px" android:alpha="0.3"/>
</LinearLayout>
