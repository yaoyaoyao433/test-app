<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fl_tab_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/fl_poi_category_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/floor_title_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="10dp">
            <TextView android:textSize="19sp" android:textStyle="bold" android:textColor="#333333" android:ellipsize="end" android:id="@+id/wm_sc_tv_floor_title" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wm_sc_shop_guess_like" android:maxLines="1" android:maxEms="6" android:singleLine="true" android:includeFontPadding="false"/>
        </LinearLayout>
    </FrameLayout>
    <com.sankuai.waimai.store.newwidgets.SCViewPagerCompat android:id="@+id/viewpager_content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/fl_tab_container"/>
    <com.sankuai.waimai.store.newwidgets.NetInfoLoadView android:id="@+id/net_info_load_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
