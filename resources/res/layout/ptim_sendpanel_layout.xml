<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/sendpanel_top_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout style="@style/xm_sdk_send_panel_normal_style">
        <com.meituan.android.ptcommonim.pageadapter.sendpanel.plugin.PTVoicePlugin android:id="@+id/voice_plugin" android:layout_width="@dimen/xm_sdk_send_panel_ic_size" android:layout_height="wrap_content"/>
        <com.sankuai.xm.imui.common.panel.plugin.InputEditorPlugin android:id="@+id/editor_plugin" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <com.meituan.android.ptcommonim.pageadapter.sendpanel.plugin.PTEmotionPlugin android:id="@+id/emotion_plugin" android:layout_width="wrap_content" android:layout_height="wrap_content" app:plugin_icon="@drawable/ptim_sendpanel_plugin_emotion"/>
        <com.meituan.android.ptcommonim.pageadapter.sendpanel.plugin.PTSendPlugin android:id="@+id/send_plugin" android:tag="SEND" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.meituan.android.ptcommonim.pageadapter.sendpanel.plugin.PTExtraPlugin android:id="@+id/extra_plugin" android:tag="ALT:SEND" android:layout_width="wrap_content" android:layout_height="wrap_content" app:plugin_icon="@drawable/ptim_sendpanel_plugin_extra"/>
    </LinearLayout>
</LinearLayout>
