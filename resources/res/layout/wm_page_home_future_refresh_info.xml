<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout_info" android:background="#f2f2f2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/info_padding" android:layout_width="match_parent" android:layout_height="0dp"/>
        <ImageView android:id="@+id/img_info" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textColor="@color/wm_common_text_auxiliary" android:gravity="center" android:id="@+id/txt_info" android:layout_marginTop="14dp" style="@style/WmText"/>
        <TextView android:textColor="@color/wm_common_text_auxiliary" android:gravity="center" android:id="@+id/sub_txt_info" android:layout_marginTop="14dp" style="@style/WmText"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#222426" android:gravity="center" android:id="@+id/btn_info" android:background="@drawable/wm_common_btn_solid_new" android:layout_width="100dp" android:layout_height="32dp" android:layout_marginTop="15dp" android:text="@string/wm_common_reload"/>
    </LinearLayout>
    <ViewStub android:id="@+id/info_skeleton" android:layout_width="match_parent" android:layout_height="match_parent"/>
</FrameLayout>
