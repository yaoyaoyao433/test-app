<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/mpay__title_new" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:baselineAligned="false">
        <TextView android:textSize="12dp" android:textColor="@color/mpay__black4" android:ellipsize="end" android:layout_gravity="bottom" android:id="@+id/mpay__collect_title_prefix" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="现金券" android:maxLines="1"/>
        <TextView android:textSize="12dp" android:textColor="#5a000000" android:ellipsize="end" android:layout_gravity="bottom" android:id="@+id/mpay__collect_title_suffix" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="(不可叠加使用)" android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/mpay__discounts_item" android:background="@drawable/mpay__discounts_detail_item_bg_new" android:layout_width="match_parent" android:layout_height="65dp" android:layout_marginBottom="6dp" android:baselineAligned="false">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:paddingLeft="18dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14dp" android:textColor="@color/mpay__black4" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_question" android:visibility="gone" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="6dp" android:src="@drawable/paycommon__ic_question"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp">
                <TextView android:textSize="12dp" android:textColor="#59000000" android:ellipsize="end" android:id="@+id/mpay__discount_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:maxLines="1"/>
                <TextView android:textSize="@dimen/mpay__text_size_6" android:textColor="@color/mpay__black3" android:ellipsize="end" android:id="@+id/mpay__discount_agreement_prefix" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                <TextView android:textSize="@dimen/mpay__text_size_6" android:textColor="@color/mpay__dark_blue" android:ellipsize="end" android:id="@+id/mpay__discount_agreement_name" android:layout_width="100dp" android:layout_height="wrap_content" android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/mpay__discount_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <ProgressBar android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_progress_bar" android:layout_width="44dp" android:layout_height="4dp" android:max="100" android:progressDrawable="@drawable/mpay__discount_progress_bar_bg" style="?android:attr/progressBarStyleHorizontal"/>
                <TextView android:textSize="10dp" android:textColor="@color/mpay__black3" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_progress_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/mpay_checkbox_tap_area" android:paddingRight="18dp" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="12dp" android:textColor="#ffff6000" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:maxLines="1"/>
            <android.support.v7.widget.AppCompatCheckBox android:layout_gravity="center_vertical" android:id="@+id/mpay__discount_check_box" android:background="@drawable/paycommon__agreement_yellow_checkbox" android:layout_width="16dp" android:layout_height="16dp" android:button="@null"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:id="@+id/mpay__more_distcounts" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="15dp">
        <TextView android:textSize="12dp" android:textColor="@color/mpay__black4" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/cashier_more_payment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:text="展开更多" android:singleLine="true"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/cashier_more_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="27dp" android:src="@drawable/mpay__more_view_arrow_new"/>
    </LinearLayout>
</LinearLayout>
