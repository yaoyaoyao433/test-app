<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@+id/tips_panel" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="32dp">
    <ImageView android:layout_gravity="top" android:id="@+id/tips_left_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:scaleType="fitXY" android:layout_marginEnd="4dp"/>
    <TextView android:textSize="12sp" android:textColor="@color/tips_text_color" android:ellipsize="end" android:layout_gravity="top" android:id="@+id/tips_content" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:includeFontPadding="false" android:layout_weight="1" android:lineSpacingExtra="5dp"/>
    <FrameLayout android:layout_gravity="top" android:id="@+id/buttonContainer" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:layout_marginStart="16dp">
        <include layout="@layout/roo_tips_button_layout"/>
    </FrameLayout>
    <ImageView android:layout_gravity="top" android:id="@+id/tips_right_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:scaleType="fitXY" android:layout_marginStart="16dp"/>
</LinearLayout>
