<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
    <LinearLayout android:gravity="center_vertical" android:id="@+id/layout" android:background="@drawable/legwork_main_pop_bg_new" android:paddingLeft="12dp" android:layout_width="wrap_content" android:layout_height="36dp">
        <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#000000" android:ellipsize="end" android:id="@+id/content" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
        <ImageView android:id="@+id/close" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginRight="12dp" android:src="@drawable/legwork_main_pop_close_new"/>
    </LinearLayout>
    <ImageView android:id="@+id/triangle" android:background="@drawable/legwork_main_pop_tip_triangle_new" android:layout_width="10dp" android:layout_height="5dp" android:layout_marginTop="36dp" android:layout_marginRight="42dp" android:layout_alignRight="@+id/layout"/>
</RelativeLayout>
