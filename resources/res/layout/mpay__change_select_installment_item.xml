<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/mpay_banklist_bg_selector" android:layout_width="match_parent" android:layout_height="65dp">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <LinearLayout android:gravity="bottom" android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="43dp" android:layout_marginRight="20dp">
            <TextView android:textSize="14dp" android:textColor="@color/paycommon__text_normal" android:ellipsize="end" android:id="@+id/installment_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:singleLine="true"/>
            <TextView android:textSize="12dp" android:textColor="@color/mpay__black3" android:ellipsize="end" android:layout_gravity="bottom" android:id="@+id/installment_content" android:paddingTop="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
        <TextView android:textSize="12dp" android:textColor="#ff999999" android:id="@+id/mpay_installment_fee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="43dp" android:layout_marginTop="3dp"/>
    </LinearLayout>
    <View android:layout_gravity="bottom" android:id="@+id/grey_line" android:background="@drawable/mpay__padding_divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
</RelativeLayout>
