<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="12dp" android:paddingTop="8dp" android:paddingRight="12dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:background="@drawable/wm_order_base_bg_report_food_pic" android:layout_width="@dimen/wm_order_list_home_indicator_height" android:layout_height="@dimen/wm_order_list_home_indicator_height" android:layout_marginRight="10dp">
        <ImageView android:id="@+id/img_good" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
        <View android:id="@+id/pic_cover" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/wm_order_confirm_title_text_color_hint" android:id="@+id/txt_product_name" android:paddingBottom="2dp" android:layout_width="0dp" android:layout_weight="1" style="@style/WmText"/>
        </LinearLayout>
        <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="3dp">
            <TextView android:textSize="@dimen/wm_common_text_size_smaller_than_normal" android:textColor="@color/wm_order_confirm_title_text_color_hint" android:gravity="center" android:id="@+id/txt_product_spec" android:layout_weight="1" style="@style/WmText"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/wm_common_text_size_smaller_than_normal" android:textColor="@color/wm_order_confirm_title_text_color_hint" android:gravity="center" android:id="@+id/txt_reason" android:layout_weight="1" style="@style/WmText"/>
            <TextView android:textSize="@dimen/wm_common_text_size_smaller_than_normal" android:textColor="@color/wm_order_confirm_title_text_color_hint" android:gravity="center" android:id="@+id/txt_food_count" android:layout_marginTop="2dp" android:minWidth="40dp" android:layout_alignParentRight="true" style="@style/WmText"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
