<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/float_console_header" android:background="@color/black" android:layout_width="match_parent" android:layout_height="40dp">
        <Button android:textSize="12sp" android:id="@+id/float_console_clear_msg" android:layout_width="80dp" android:layout_height="match_parent" android:text="Clear" android:layout_alignParentLeft="true"/>
        <Button android:textSize="12sp" android:id="@+id/float_console_close" android:layout_width="80dp" android:layout_height="match_parent" android:text="关闭" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout android:background="#66000000" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="12sp" android:textColor="#42ff33" android:id="@+id/out_text" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
