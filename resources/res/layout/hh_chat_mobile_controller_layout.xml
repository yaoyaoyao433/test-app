<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/bottom_control" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/bottom_menu_layout" android:paddingLeft="@dimen/hh_horizontal_margin" android:paddingRight="@dimen/hh_horizontal_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/photos_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentStart="true">
            <View android:id="@+id/empty_view_for_bottom" android:layout_width="1dp" android:layout_height="100dp"/>
            <com.hhmedic.android.sdk.module.video.widget.chat.ChatToolsView android:id="@+id/tools" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp"/>
            <ImageView android:id="@+id/showTools" android:background="@drawable/hh_av_tools_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:src="@drawable/hp_avchat_tools_more" android:contentDescription="@string/hh_sdk_image_name" android:paddingStart="13dp" android:paddingEnd="13dp"/>
            <com.hhmedic.android.sdk.module.video.widget.chat.UploadView android:id="@+id/upload" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginTop="14dp"/>
            <Button android:id="@+id/photos" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/hh_video_camera_title" android:drawableTop="@drawable/hh_av_chat_voice" style="@style/hh_av_btn"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/photos_layout" android:layout_centerHorizontal="true">
            <TextView android:textSize="@dimen/hh_video_menu_text_font" android:textColor="@android:color/white" android:id="@+id/time_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/hh_vertical_large"/>
            <Button android:id="@+id/hand_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="@string/hh_av_hangup_btn" android:drawableTop="@drawable/hh_av_chat_refuse_bg_normal" style="@style/hh_av_btn"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/switch_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/photos_layout" android:layout_alignParentEnd="true">
            <Button android:textColor="@drawable/hh_av_btn_text_color" android:id="@+id/change_doctor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="@string/hh_av_change_doctor" android:drawableTop="@drawable/hh_av_chat_change_doctor_icon" style="@style/hh_av_btn"/>
            <Button android:textColor="@drawable/hh_av_btn_text_color" android:id="@+id/change" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="@string/hh_av_change_camera" android:drawableTop="@drawable/hh_av_change_front_normal" style="@style/hh_av_btn"/>
            <Button android:textColor="@android:color/white" android:id="@+id/showJob" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hp_doctor_job_title" android:drawablePadding="2dp" style="@style/hh_av_btn"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/hh_sdk_watermark" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/hh_chat_water_layout_top" android:scaleType="centerInside" android:contentDescription="@string/hh_sdk_image_name" android:layout_marginStart="@dimen/hh_normal_margin" android:layout_marginEnd="122dp"/>
    <com.hhmedic.android.sdk.module.video.widget.chat.ChatTipView android:id="@+id/hh_chat_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
