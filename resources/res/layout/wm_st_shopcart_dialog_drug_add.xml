<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/wm_st_dlg_container" android:background="@drawable/wm_drug_openmember_dialog_oval_bg" android:layout_width="311dp" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#222426" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/wm_drug_modify_shop_cart_count"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <ImageView android:id="@+id/btn_reduce" android:padding="12dp" android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/wm_drug_btn_reduce"/>
            <EditText android:textSize="24sp" android:textColor="#222426" android:gravity="center" android:id="@+id/wm_st_dlg_tv_auth_content" android:background="@color/wm_sg_color_FFFFFF" android:layout_width="80dp" android:layout_height="wrap_content" android:maxLines="1" android:maxLength="8" android:inputType="number" android:textCursorDrawable="@null"/>
            <ImageView android:id="@+id/btn_add" android:padding="12dp" android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/wm_drug_btn_add"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="20dp" android:layout_marginBottom="16dp">
            <TextView android:textSize="14sp" android:textColor="#222426" android:gravity="center" android:id="@+id/wm_st_dlg_tv_cancel" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginRight="6dp" android:text="@string/wm_sc_common_cancel" android:layout_weight="1"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#222426" android:gravity="center" android:id="@+id/wm_st_dlg_tv_proceed" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="6dp" android:layout_marginRight="16dp" android:text="@string/wm_sc_common_confirm" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
