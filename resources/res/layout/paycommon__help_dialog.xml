<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/paybase__bg_alert_with_btn" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="18sp" android:textColor="@color/paybase__text_color_2" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="title"/>
    <ImageView android:id="@+id/image" android:layout_width="220dp" android:layout_height="91dp" android:layout_marginTop="12dp" android:scaleType="fitXY" android:adjustViewBounds="true"/>
    <TextView android:textSize="15sp" android:textColor="@color/paybase__text_color_3" android:id="@+id/content" android:paddingLeft="20dp" android:paddingTop="12dp" android:paddingRight="20dp" android:paddingBottom="17dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="content"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" style="@style/paybase__horizonal_divider"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="16sp" android:textColor="@color/paybase__text_color_3" android:gravity="center" android:id="@+id/function_btn" android:background="@drawable/paybase__bg_alert_btn_selector" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        <View android:id="@+id/alert_divider" android:visibility="gone" style="@style/paybase__vertical_divider"/>
        <TextView android:textSize="16sp" android:textColor="@color/paybase__base_green" android:gravity="center" android:id="@+id/confirm_btn" android:background="@drawable/paybase__bg_alert_btn_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/paycommon__alert_btn_default_text" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
