<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/item_view" android:background="@android:color/white" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp">
    <Button android:textSize="10sp" android:textColor="@color/orange_text_ff6633" android:id="@+id/module_expend" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="收起" android:layout_alignParentRight="true"/>
    <Button android:textSize="10sp" android:textColor="@android:color/holo_blue_dark" android:id="@+id/module_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="编辑" android:layout_toLeftOf="@+id/module_expend"/>
    <TextView android:textSize="12sp" android:textColor="@android:color/black" android:id="@+id/viewcell_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="模块名" android:layout_toLeftOf="@+id/module_edit" android:layout_alignParentLeft="true"/>
    <TextView android:textSize="11sp" android:textColor="@android:color/black" android:id="@+id/viewcell_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="模块名" android:layout_below="@+id/viewcell_name" android:layout_alignParentLeft="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/sections_whole_view" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/viewcell_info" android:layout_alignLeft="@+id/viewcell_info"/>
</RelativeLayout>
