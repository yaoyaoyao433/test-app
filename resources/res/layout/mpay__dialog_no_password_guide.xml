        <Button android:textSize="17sp" android:layout_gravity="center" android:id="@+id/confirm" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" style="@style/mtpaysdk_button"/>
        <TextView android:textSize="17sp" android:textColor="@color/paybase__text_color_3" android:gravity="center" android:layout_gravity="center" android:id="@+id/cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>
