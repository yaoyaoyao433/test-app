<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:background="@drawable/mpay__dialog_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="32dp" android:layout_marginRight="32dp">
    <TextView android:textSize="18sp" android:textColor="@color/paybase__text_color_2" android:gravity="center_horizontal" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="19dp"/>
    <TextView android:textSize="15sp" android:textColor="@color/paybase__text_color_3" android:id="@+id/tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="9dp" android:layout_marginRight="20dp"/>
    <ImageView android:id="@+id/imageView2" android:layout_width="118dp" android:layout_height="90dp" android:layout_marginTop="5dp" android:src="@drawable/mpay__bg_no_password" android:scaleType="centerCrop"/>
    <com.meituan.android.paybase.widgets.agreement.AgreementView android:orientation="horizontal" android:id="@+id/agreement_container" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
