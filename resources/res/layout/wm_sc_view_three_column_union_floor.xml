<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/fl_mach_floor_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <FrameLayout android:id="@+id/fl_native_floor_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/white_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/wm_sc_common_dimen_32"/>
        <RelativeLayout android:id="@+id/rl_root" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wm_sc_common_dimen_12" android:layout_marginTop="@dimen/wm_sc_common_dimen_12" android:layout_marginRight="@dimen/wm_sc_common_dimen_12">
            <com.sankuai.waimai.store.view.banner.roundview.UniversalImageView android:id="@+id/wm_sc_iv_floor_bg_pic" android:layout_width="match_parent" android:layout_height="40dp" android:scaleType="matrix" app:riv_corner_radius_top_left="@dimen/wm_sc_common_dimen_12" app:riv_corner_radius_top_right="@dimen/wm_sc_common_dimen_12"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/wm_sc_title_container" android:paddingLeft="12dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="@dimen/wm_sc_common_dimen_40">
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#333333" android:ellipsize="end" android:id="@+id/wm_sc_tv_floor_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:maxEms="6" android:singleLine="true"/>
                <TextView android:textSize="@dimen/wm_sc_common_dimen_textsize_11" android:textColor="#33312d" android:id="@+id/wm_sc_tv_tip" android:background="@drawable/wm_sc_goods_list_bought_count" android:paddingLeft="@dimen/wm_sc_common_dimen_8" android:paddingTop="@dimen/wm_sc_common_dimen_2_half" android:paddingRight="@dimen/wm_sc_common_dimen_8" android:paddingBottom="@dimen/wm_sc_common_dimen_2_half" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wm_sc_common_dimen_10" android:maxLines="1" android:maxEms="10" android:singleLine="true" android:drawableLeft="@drawable/wm_sc_goods_list_floor_fire" android:drawablePadding="@dimen/wm_sc_common_dimen_2"/>
                <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="@color/wm_sg_color_222426" android:gravity="center" android:id="@+id/wm_sc_tv_more" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/wm_sc_common_dimen_5" android:text="@string/wm_sc_common_has_all" android:maxLines="1" android:singleLine="true" android:drawablePadding="2dp"/>
            </LinearLayout>
            <com.sankuai.waimai.store.newwidgets.list.SCRecyclerView android:id="@+id/rv_physical_type" android:paddingBottom="@dimen/wm_sc_common_dimen_6" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/wm_sc_title_container"/>
            <com.sankuai.waimai.store.goods.list.viewblocks.experimental.views.OnSaleUnionView android:id="@+id/on_sale_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_below="@+id/rv_physical_type"/>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>
