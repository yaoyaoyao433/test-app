<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="#7a7e83" android:id="@+id/mmp_cancel" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="取消"/>
        <TextView android:textSize="18sp" android:textColor="#222222" android:id="@+id/mmp_ok" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="确定" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_pickers" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="40dp">
        <NumberPicker android:id="@+id/mmp_picker1" android:visibility="gone" android:descendantFocusability="blocksDescendants" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="18sp" android:textColor="@android:color/black" android:layout_gravity="center_vertical" android:id="@+id/mmp_mum_dot1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text=":"/>
        <NumberPicker android:id="@+id/mmp_picker2" android:visibility="gone" android:descendantFocusability="blocksDescendants" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
        <TextView android:textSize="18sp" android:textColor="@android:color/black" android:layout_gravity="center_vertical" android:id="@+id/mmp_mum_dot2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text=":"/>
        <NumberPicker android:id="@+id/mmp_picker3" android:visibility="gone" android:descendantFocusability="blocksDescendants" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
    </LinearLayout>
</LinearLayout>
