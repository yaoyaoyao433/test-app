<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/wm_smart_assistant_item_bg_shape" android:padding="10dp" android:layout_width="320dp" android:layout_height="225dp">
    <RelativeLayout android:id="@+id/poi_header" android:layout_width="match_parent" android:layout_height="53dp">
        <ImageView android:id="@+id/poi_pic" android:background="@drawable/wm_smart_assistant_img_border" android:padding="1dp" android:layout_width="40dp" android:layout_height="40dp" android:scaleType="centerCrop"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/poi_pic" android:layout_alignTop="@+id/poi_pic">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="#333333" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/poi_name" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:divider="@drawable/wm_common_horizontal_linear_layout_divider_6dp" android:showDividers="middle" android:dividerPadding="4dp">
                <TextView android:textSize="11dp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/min_price_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2.5dp" android:maxLines="1"/>
                <TextView android:textSize="11dp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/shipping_fee_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2.5dp" android:layout_marginRight="2.5dp" android:maxLines="1"/>
                <TextView android:textSize="11dp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/shipping_distance_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2.5dp" android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/poi_pic" android:layout_alignBottom="@+id/poi_pic">
            <ImageView android:id="@+id/poi_discount_label" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginRight="5dp" android:scaleType="fitXY"/>
            <TextView android:textSize="11dp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/poi_discount_desc" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1"/>
            <TextView android:textSize="11dp" android:textColor="#666666" android:id="@+id/poi_retrival_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:maxLines="1"/>
        </LinearLayout>
        <View android:background="#e4e4e4" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_food_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/poi_header"/>
</LinearLayout>
