            <TextView android:textSize="10dp" android:textColor="@color/takeout_white" android:id="@+id/txt_new_tip" android:background="@drawable/wm_order_confirm_privacy_new_tip_bg" android:paddingLeft="3dp" android:paddingTop="2dp" android:paddingRight="3dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:text="NEW" android:layout_marginStart="9dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14dp" android:textColor="#222426" android:id="@+id/privacy_protect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="隐私保护中"/>
            <com.meituan.roodesign.resfetcher.widgets.RooImageView android:id="@+id/img_checked" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginLeft="6dp" app:project="waimai_c" app:srcName="waimai_c_wm_order_selected"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="12sp" android:textColor="@color/wm_order_confirm_title_text_color_hint" android:ellipsize="end" android:id="@+id/txt_privacy_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="3" android:lineSpacingExtra="3dp"/>
