    <TextView android:textSize="12sp" android:textColor="@color/wm_order_confirm_title_text_color_hint" android:id="@+id/txt_privacy_audio_record_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp"/>
</LinearLayout>
